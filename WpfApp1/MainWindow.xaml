<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Kalkulačka" Height="650" Width="400"
        Focusable="True"
        FocusManager.FocusedElement="{Binding RelativeSource={RelativeSource Self}}">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Display -->
        <TextBox x:Name="Display"
                 Grid.Row="0"
                 Height="70"
                 Margin="0,0,0,10"
                 FontSize="28"
                 TextAlignment="Right"
                 VerticalContentAlignment="Center"
                 IsReadOnly="True"
                 Text="0"
                 BorderBrush="Black"
                 BorderThickness="3px"
                 />

        <!-- Buttons area -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <!-- Row 0: C, CE, 1/x, ÷ -->
            <Button Grid.Row="0" Grid.Column="1" Content="C" Click="ClearButton_Click" FontSize="18" Margin="5,5,5,5" BorderBrush="Black" BorderThickness="3px"/>
            <Button Grid.Row="0" Grid.Column="2" Content="CE" Click="ClearEntryButton_Click" FontSize="18" Margin="5,5,5,5" BorderBrush="Black" BorderThickness="3px"/>
            <Button Grid.Row="1" Content="1/x" Click="ReciprocalButton_Click" FontSize="18" Margin="5,5,5,5" BorderBrush="Black" BorderThickness="3px"/>
            <Button Grid.Row="1" Grid.Column="3" Content="÷" Click="OperatorButton_Click" FontSize="18" Margin="5,6,5,4" BorderBrush="Black" BorderThickness="3px"/>

            <!-- Row 1: 7, 8, 9, × -->
            <Button Grid.Row="2" Grid.Column="0" Content="7" Click="DigitButton_Click" FontSize="18" Margin="5,5,5,5" BorderBrush="Black" BorderThickness="3px"/>
            <Button Grid.Row="2" Grid.Column="1" Content="8" Click="DigitButton_Click" FontSize="18" Margin="5,5,5,5" BorderBrush="Black" BorderThickness="3px"/>
            <Button Grid.Row="2" Grid.Column="2" Content="9" Click="DigitButton_Click" FontSize="18" Margin="5,5,5,5" BorderBrush="Black" BorderThickness="3px"/>
            <Button Grid.Row="2" Grid.Column="3" Content="×" Click="OperatorButton_Click" FontSize="18" Margin="5,5,5,5" BorderBrush="Black" BorderThickness="3px"/>

            <!-- Row 2: 4, 5, 6, − -->
            <Button Grid.Row="3" Grid.Column="0" Content="4" Click="DigitButton_Click" FontSize="18" Margin="5,5,5,5" BorderBrush="Black" BorderThickness="3px"/>
            <Button Grid.Row="3" Grid.Column="1" Content="5" Click="DigitButton_Click" FontSize="18" Margin="5,5,5,5" BorderBrush="Black" BorderThickness="3px"/>
            <Button Grid.Row="3" Grid.Column="2" Content="6" Click="DigitButton_Click" FontSize="18" Margin="5,5,5,5" BorderBrush="Black" BorderThickness="3px"/>
            <Button Grid.Row="3" Grid.Column="3" Content="−" Click="OperatorButton_Click" FontSize="18" Margin="5,5,5,5" BorderBrush="Black" BorderThickness="3px"/>

            <!-- Row 3: 1, 2, 3, + -->
            <Button Grid.Row="4" Grid.Column="0" Content="1" Click="DigitButton_Click" FontSize="18" Margin="5,5,5,5" BorderBrush="Black" BorderThickness="3px"/>
            <Button Grid.Row="4" Grid.Column="1" Content="2" Click="DigitButton_Click" FontSize="18" Margin="5,5,5,5" BorderBrush="Black" BorderThickness="3px"/>
            <Button Grid.Row="4" Grid.Column="2" Content="3" Click="DigitButton_Click" FontSize="18" Margin="5,5,5,5" BorderBrush="Black" BorderThickness="3px"/>
            <Button Grid.Row="4" Grid.Column="3" Content="+" Click="OperatorButton_Click" FontSize="18" Margin="5,5,5,5" BorderBrush="Black" BorderThickness="3px"/>

            <!-- Row 4: x², √x, 0, . -->
            <Button Grid.Row="1" Grid.Column="1" Content="x²" Click="SquareButton_Click" FontSize="18" Margin="5,5,5,5" BorderBrush="Black" BorderThickness="3px"/>
            <Button Grid.Row="1" Content="√x" Click="SqrtButton_Click" FontSize="18" Margin="5,5,5,5" BorderBrush="Black" BorderThickness="3px" Grid.Column="2"/>
            <Button Grid.Row="5" Grid.Column="1" Content="0" Click="DigitButton_Click" FontSize="18" Margin="5,5,5,5" BorderBrush="Black" BorderThickness="3px"/>
            <Button Grid.Row="5" Grid.Column="2" Content="." Click="DotButton_Click" FontSize="18" Margin="5,5,5,5" BorderBrush="Black" BorderThickness="3px"/>

            <!-- Row 5: ±, %, ⌫, = -->
            <Button Grid.Row="5" Grid.Column="0" Content="±" Click="PlusMinusButton_Click" FontSize="18" Margin="5" BorderBrush="Black" BorderThickness="3px"/>
            <Button Content="%" Click="OperatorButton_Click" FontSize="18" Margin="5,5,5,5" BorderBrush="Black" BorderThickness="3px"/>
            <Button Grid.Column="3" Content="⌫" Click="BackspaceButton_Click" FontSize="18" Margin="5,5,5,5" BorderBrush="Black" BorderThickness="3px"/>
            <Button Grid.Row="5" Grid.Column="3" Content="=" Click="EqualsButton_Click" FontSize="18" Margin="5" Background="MediumPurple" Foreground="White" BorderBrush="Black" BorderThickness="3px"/>
        </Grid>
    </Grid>
</Window>
